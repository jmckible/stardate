<script type='text/javascript'>
  $(document).ready(function(){
    budgetMonth = new Highcharts.Chart({
      chart: {
        renderTo: 'BudgetMonth',
        type: 'column',
        width: 800,
        height: 280
      },
      title:  { text: false },
      legend: { enabled: false },
      yAxis:  { 
        title: false,
        labels: {
         formatter: function() {
           return '$' + this.value
         } 
        }
      },
      xAxis: {
        categories: [<%= @household.accounts.deferred.dashboard.collect{|a| "'#{a.name.gsub(' Deferral', '')}'"}.join(', ').html_safe %>]
      },
      series: [{
        name: 'Month',
        data: [<%= @household.accounts.deferred.dashboard.collect{ |account| 
          amount = account.balance
          "{y: #{amount}, color: '#{amount < 0 ? '#FF00CC' : '#00CCFF'}'}"
        }.join(', ').html_safe
        
         %>],
      }]
    });
  });
</script>