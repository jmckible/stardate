<script type='text/javascript'>
  $(document).ready(function(){
    healthMonth = new Highcharts.Chart({
      chart: {
        renderTo: 'HealthYear'
      },
      title:  { text: false },
      legend: { enabled: false },
      yAxis:[
        {
          title: false
        }, 
        {
          title: false,
          opposite: true
        }
      ],
      xAxis: {
        type: 'datetime',
        tickInterval: 7 * 24 * 3600 * 1000, 
        labels: {
          step: 7,
          formatter: function(){
            return(Highcharts.dateFormat('%b %e',this.value));
          }
        }
      },
      series: [{
        type: 'column',
        name: 'Exercise',
        data: <%= @period.step(7).collect{|date| current_user.bikes.on(date..(date+6)).sum(:minutes) + current_user.runs.on(date..(date+6)).sum(:minutes) + current_user.ellipticals.on(date..(date+6)).sum(:minutes)}.to_json %>,
        pointInterval: 7 * 24 * 3600 * 1000,
        pointStart: Date.UTC(<%= @period.first.year %>, <%= @period.first.month %>, <%= @period.first.day %>),
        yAxis: 0,
        pointWidth: 10,
        pointPadding: 0,
        //shadow: false,
        color: '#00CCFF'
      }, {
        type: 'spline',
        name: 'Weight',
        data: <%= current_user.weight_json @period %>,
        pointInterval: 7 * 24 * 3600 * 1000,
        pointStart: Date.UTC(<%= @period.first.year %>, <%= @period.first.month %>, <%= @period.first.day %>),
        yAxis: 1,
        color: '#FF00CC'
      }]
    });
  });
</script>