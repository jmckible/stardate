%h1= humanize_period @period

.date_selector
  = form_tag items_path, :method=>:get do
    = select_month @period.first
    = select_year  @period.first, start_year: @user.created_at.year, end_year: Time.now.to_date.year
.clear

- if @items.empty?
  %p No Activity
- else
  %table
    %tbody
      = render partial: 'item', collection: @items

