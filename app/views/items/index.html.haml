%ul#Transactions
  - for day in @period.to_a.reverse
    - items = current_user.items.on day
    - unless items.empty?
      %li.date= day.strftime('%A %B %e')
      %li
        %ul
          - for item in items
            %li
              %dl
                %dt= color_money item.value
                %dd= link_to h(item.description), item, :rel=>:facebox
              
    
#Input
  #NewTransaction
    - form_for @item do |f|
      = render :partial=>'form', :object=>f        
      %p= submit_tag 'Add Transaction'


#Activity
  %script{:type=>'text/javascript'}
    var expenses = new FusionCharts("/flash/MSArea.swf", "Activity", "800", "300", "0", "0");
    = "expenses.setDataURL(\"#{activity_graph_url(:format=>'xml')}\");"
    expenses.render("Activity");
