%dl#Scorecard
  %dt 7
  %dd= color_money current_user.total_past_week
  
  %dt 30
  %dd= color_money current_user.total_past_month
  
  %dt 365
  %dd= color_money current_user.total_past_year
  
  %dt ∞
  %dd= color_money current_user.items.sum(:value)
  
- form_tag things_path do 
  %p= text_field_tag 'thing'

- @stuff.each do |date, things|
  %h2= date.to_s :long
  - things.each do |thing|
    - if thing.is_a?(Item)
      .item
        = link_to thing.date.to_s(:short), thing, :rel=>:facebox
        = color_money thing.value
        = h thing.vendor.try(:name)
        = h thing.description
        = h thing.tag_list
    - elsif thing.is_a?(Note)
      .note
        = link_to thing.date.to_s(:short), thing, :rel=>:facebox
        = h thing.body

- form_for @item do |f|
  = render :partial=>'form', :object=>f        
  %p= submit_tag 'Add Transaction'

- form_for @note do |f|
  = render :partial=>'notes/form', :object=>f
  %p= submit_tag 'Add Note'  

/%img{:src=>current_user.chart((Date.today - 30)..Date.today)}