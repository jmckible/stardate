= modal do

  %h1 Edit Note

  = form_with model: @note, data: { turbo: false } do |f|
    %p= f.date_select :date, order: [:month, :day, :year]
    %p= f.text_area :body, default: 'note'
    %p
      = submit_tag 'Update'
      or
      %span.delete= button_to 'delete', @note, method: :delete, data: { turbo: false, confirm: 'Are you sure?' }
