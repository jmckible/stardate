%p
  Day of Month:
  = form.collection_select :day, (1..31).collect, :to_i, :to_s
%p
  Amount
  = form.text_field :amount, class: 'money'
%p
  Vendor
  = form.text_field :vendor_name, default: 'vendor'
%p
  Tags
  = form.text_field :tag_list, default: 'tags'

%p
  Debit:
  = form.collection_select :debit_id, Current.household.accounts, :id, :name, include_blank: true
%p
  Credit:
  = form.collection_select :credit_id, Current.household.accounts, :id, :name, include_blank: true
