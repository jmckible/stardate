<h1>Edit Recurring Transaction</h1>

<%= error_messages_for :recurring %>

<% form_for(:recurring, :url => recurring_path(@recurring), :html => { :method => :put }) do |f| %>
  <%= render :partial=>'form', :object=>f %>
  <p><%= submit_tag "Update" %> or <%= link_to 'Delete', recurring_path(@recurring), :method=>:delete, :confirm=>"Are you sure?" %></p>
<% end %>

<p><%= link_to 'Back', recurrings_path %></p>