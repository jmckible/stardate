%p= link_to 'New recurring', new_recurring_path, :rel=>:facebox

- unless @recurrings.empty?
  %table
    %tr
      %th Day
      %th Amount
      %th Vendor
      %th Description
      
    - for recurring in @recurrings
      %tr
        %td= link_to recurring.day, recurring, :rel=>:facebox
        %td= color_money recurring.value
        %td= h recurring.vendor.try(:name)
        %td= h recurring.description