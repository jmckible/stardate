<h1>Login</h1>

<% form_tag authenticate_path do  %>
  <p>Email<br/><%= text_field_tag :email %></p>
  <p>Password<br/><%= password_field_tag :password %></p>
	
	<% if flash[:notice] -%>
	  <p id="Flash"><%= flash[:notice] %></p>
	<% end -%>

  <p><%= submit_tag 'Login', :class=>:submit %></p>
<% end %>