<h1>Edit Work</h1>

<%= error_messages_for :task %>

<% form_for(:task, :url => task_path(@task), :html => { :method => :put }) do |f| %>
  <%= render :partial=>'form', :object=>f %>
  <p><%= submit_tag "Update" %> or <%= link_to 'Delete', task_path(@task), :method=>:delete, :confirm=>"Are you sure?" %></p>
<% end %>

<p><%= link_to 'Back', job_path(@task.job) %></p>