= form_with path: things_path, data: { turbo: false } do
  = text_field_tag 'thing', '', class: 'long'
  /= link_to '...', new_thing_path, class: 'long_entry', data: { turbo: true, turbo_frame: 'modal' }

#Graphs
  #SpendingMonth{ data: {
    controller: 'spending-graph',
    spending_graph_expense_value: @month.collect{|date| @household.sum_non_exceptional_expenses(@month.first..date)},
    spending_graph_income_value: @month.collect{|date| @household.sum_non_exceptional_income @month.first..date},
    spending_graph_start_year_value: (@month.first - 1.month).year,
    spending_graph_start_month_value: (@month.first - 1.month).month,
    spending_graph_start_day_value: (@month.first - 1.month).day
  }}
  - if @user.workouts.during(@month).any? || @user.weights.during(@month).any?
    #HealthMonth{ data: {
      controller: 'health-month',
      health_month_workout_value: @month.collect{|date| @user.workouts.on(date).sum(:minutes)},
      health_month_weights_value: @user.weight_json(@month),
      health_month_start_year_value: (@month.first - 1.month).year,
      health_month_start_month_value: (@month.first - 1.month).month,
      health_month_start_day_value: (@month.first - 1.month).day
    }}
.clear

#BudgetMonth{ data: {
  controller: 'budget-month',
  budget_month_categories_value: @household.accounts.dashboard.collect{|a| a.name.gsub(' Deferral', '')},
  budget_month_balances_value: @household.budget_month_values.to_json
}}

