<h1>Create an Account</h1>

<%= error_messages_for :user %>

<% form_for(:user, :url => users_path) do |f| %>
  <p>Email<br/><%= f.text_field :email %></p>
  <p>Timezone<br/><%= f.time_zone_select :time_zone %></p>
  
  <p>Password<br/><%= f.password_field :password %></p>
  <p>Confirm Password<br/><%= f.password_field :password_confirmation %></p>

	<p>Prove you are a human<br/>
		<%= @captcha %> + <%= session[:captcha] - @captcha %> = <%= text_field_tag 'captcha' %></p>

  <p><%= submit_tag "Create Account", :class=>:submit %></p>
<% end %>
