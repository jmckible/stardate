= error_messages_for :user

= form_for @user do |f|
  %p
    Email
    %br
    = f.text_field :email
    
  %p
    Time Zone
    %br
    = f.time_zone_select :time_zone
    
  %p= submit_tag 'Update'
  
= form_for @user do |f|
  %p
    New Password
    %br
    = f.password_field :password
    
  %p
    Confirm New Password
    %br
    = f.password_field :password_confirmation
  
  %p= submit_tag 'Update Password'